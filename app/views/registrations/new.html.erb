<div class="max-w-md mx-auto mt-10">
  <h1 class="text-2xl font-bold mb-5">Sign Up</h1>
  
  <%= form_with(model: @user, url: signup_path, class: "space-y-4") do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4">
        <div class="text-red-700">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul class="list-disc pl-5 mt-2">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    
    <div>
      <%= form.label :name, class: "block text-sm font-medium" %>
      <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= form.label :email, class: "block text-sm font-medium" %>
      <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= form.label :password, class: "block text-sm font-medium" %>
      <%= form.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= form.label :password_confirmation, class: "block text-sm font-medium" %>
      <%= form.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= form.submit "Sign Up", class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
  
  <div class="mt-4 text-center">
    <p>Already have an account? <%= link_to "Log in", login_path, class: "text-indigo-600 hover:text-indigo-500" %></p>
  </div>
</div>
