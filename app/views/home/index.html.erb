<div class="w-full">
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Welcome to Abscribe</h1>
    
    <% if user_signed_in? %>
      <div class="mb-8">
        <p class="text-lg text-gray-700 mb-4">Hello, <%= current_user.email %>!</p>
        <div class="space-x-4">
          <%= link_to "Edit Profile", edit_user_registration_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    <% else %>
      <div class="mb-8">
        <p class="text-lg text-gray-700 mb-4">Please sign in to access your account.</p>
        <div class="space-x-4">
          <%= link_to "Sign In", new_user_session_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
