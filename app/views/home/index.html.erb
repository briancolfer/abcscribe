<div class="max-w-4xl mx-auto text-center">
  <h1 class="text-4xl font-bold mb-6">Welcome to ABCScribe</h1>
  
  <div class="bg-white shadow-lg rounded-lg p-8 mb-8">
    <h2 class="text-2xl font-semibold mb-4">Your Digital Writing Assistant</h2>
    <p class="text-lg mb-6">ABCScribe helps you create, manage, and share your writing projects with ease.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
      <div class="bg-gray-50 p-6 rounded-lg">
        <h3 class="text-xl font-semibold mb-3">Create</h3>
        <p>Start new writing projects with our intuitive editor</p>
      </div>
      
      <div class="bg-gray-50 p-6 rounded-lg">
        <h3 class="text-xl font-semibold mb-3">Organize</h3>
        <p>Keep your writing organized with folders and tags</p>
      </div>
      
      <div class="bg-gray-50 p-6 rounded-lg">
        <h3 class="text-xl font-semibold mb-3">Collaborate</h3>
        <p>Share your work and collaborate with others</p>
      </div>
    </div>
  </div>
  
  <% unless logged_in? %>
    <div class="mt-8 space-x-4">
      <%= link_to "Get Started", signup_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg" %>
      <%= link_to "Learn More", "#", class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-6 rounded-lg" %>
    </div>
  <% end %>
</div>

