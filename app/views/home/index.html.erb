<div class="container mx-auto px-4">
            <div class="text-center mb-12">
              <h1 class="text-5xl font-extrabold text-gray-800 mb-4 tracking-tight leading-tight">
                <span class="text-black-600">ABC Scribe</span>
              </h1>
              <h2 class="text-2xl text-gray-700 tracking-tight leading-tight">
                Record and analyze <span class="text-green-600">Antecedents</span>, <span class="text-blue-500">Behavior</span>, and <span class="text-red-600">Consequences</span>
              </h2>
            </div>

            <% if user_signed_in? %>
              <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 text-center shadow-md">
                  <h3 class="text-lg font-semibold text-blue-800 mb-2">ABC Journal Dashboard</h3>
                  <p class="text-sm text-blue-600 mb-4">View behavioral patterns</p>
                  <%= link_to "View Entries", journal_entries_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
                </div>
                <div class="bg-green-50 border border-green-200 rounded-lg p-6 text-center shadow-md">
                  <h3 class="text-lg font-semibold text-green-800 mb-2">New Entry</h3>
                  <p class="text-sm text-green-600 mb-4">Document a recent behavioral observation</p>
                  <%= link_to "Create Entry", new_journal_entry_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
                </div>
              </div>
            <% else %>
              <div class="text-center">
                <p class="text-lg text-gray-700 mb-4">Please sign in to access your account.</p>
                <div class="space-x-4">
                  <%= link_to "Sign In", new_user_session_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
                  <%= link_to "Sign Up", new_user_registration_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
                </div>
              </div>
            <% end %>
          </div>