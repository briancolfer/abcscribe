<header class="bg-gray-800 text-white shadow-md rounded-b-lg">
  <div class="container mx-auto flex flex-wrap justify-between items-center py-4 px-6">
    <h1 class="text-2xl font-bold tracking-wide hover:text-gray-300">
      <%= link_to "ABC Scribe", root_path %>
    </h1>
    <nav class="flex items-center space-x-4">
      <% if user_signed_in? %>
        <span class="text-gray-300 text-sm md:text-base">Welcome, <%= current_user.email %></span>
        <%= link_to "Dashboard", journal_entries_path, class: "text-blue-300 hover:text-white px-4 py-2 rounded-md transition duration-300 ease-in-out" %>
        <%= link_to "Profile", edit_user_registration_path, class: "text-gray-300 hover:text-white px-4 py-2 rounded-md transition duration-300 ease-in-out" %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-red-500 hover:text-red-700 px-4 py-2 rounded-md transition duration-300 ease-in-out border-0" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "text-gray-300 hover:text-white px-4 py-2 rounded-md transition duration-300 ease-in-out" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "text-gray-300 hover:text-white px-4 py-2 rounded-md transition duration-300 ease-in-out" %>
      <% end %>
    </nav>
  </div>
</header>