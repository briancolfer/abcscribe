<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Observation Details</h1>
      <p class="mt-1 text-sm text-gray-500">
        For <%= link_to @observation.subject.name, subject_path(@observation.subject), class: "text-indigo-600 hover:text-indigo-900" %>
      </p>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_observation_path(@observation), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= button_to "Delete", observation_path(@observation), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Date and Time</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @observation.observed_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>

        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Setting</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @observation.setting&.name || "Not specified" %>
          </dd>
        </div>

        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Antecedent</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= simple_format @observation.antecedent %>
          </dd>
        </div>

        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Behavior</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= simple_format @observation.behavior %>
          </dd>
        </div>

        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Consequence</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= simple_format @observation.consequence %>
          </dd>
        </div>

        <% if @observation.notes.present? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Notes</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= simple_format @observation.notes %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "Back to all observations", subject_observations_path(@observation.subject), class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
</div>

