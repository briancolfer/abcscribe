<div class="max-w-md mx-auto mt-16 p-8 bg-white rounded shadow">
  <h1 class="text-2xl mb-4">Sign In via Email</h1>

  <%= form_with url: magic_links_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium" %>
      <%= f.email_field :email,
                        required: true,
                        autofocus: true,
                        class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Send me a login link",
                   class: "px-4 py-2 bg-blue-600 text-white rounded" %>
    </div>
  <% end %>
</div>